@using System.Threading.Tasks
@using CompetencyMatrix.Models
@using Microsoft.AspNetCore.Identity
@model WebApplicationCore.Models.AccountViewModels.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

@section Header{
    <link href="~/css/login.css" rel="stylesheet" />
}

<div class="container body-content loginOuterBox">
    <div class="row">
        <div class="col-lg-offset-3 col-lg-5 align loginBox">
            <section>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <h3 >Welcome to Intetics Competency Matrix</h3>
                    <hr/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-offset-1 col-md-10 align">
                            <div class="form-group">
                                <label asp-for="Email" class="col-md-2 control-label"></label>
                                <div class="col-md-1">&nbsp;</div>
                                <div class="col-md-7">
                                    <input asp-for="Email" class="form-control" title=""/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="col-md-2 control-label"></label>
                                <span class="col-md-1"></span>
                                <div class="col-md-7">
                                    <input asp-for="Password" class="form-control" title=""/>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-5 col-md-10">
                                    <button type="submit" class="btn btn-default">Log in</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}