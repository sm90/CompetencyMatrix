@model IEnumerable<CompetencyMatrix.ViewModels.TrainingSertificationModel>

@{
    var employeeId = ViewContext.HttpContext.Request.Query["employeeId"];
}

@Html.Hidden("EmployeeId", employeeId)

<div class="cursorover">
    <a href="#" onclick="backToEmployee()" class="navbar-link">
        <span class="glyphicon glyphicon-circle-arrow-left"></span>
        Back to employee
    </a>
</div>

<div class="well">

    <div class="form-group pull-right">
        <button type="button" class="btn btn-default " id="btnAddSertification" onclick="addSertification()">
            <span class="glyphicon glyphicon-plus"></span>
            Add
        </button>
        <button type="button" class="btn btn-default disabled" id="deleteSertification"  onclick="deleteSertification()">
            <span class="glyphicon glyphicon-floppy-remove"></span>
            Remove
        </button>
    </div>

    <table id="sertificatesList" class="table table-condensed table-striped table-hover">
        <colgroup>
            <col width="20" />
            <col width="100" />
            <col />
            <col width="100" />
        </colgroup>
        <thead class="row" style="background-color: darkgray">
            <tr>
                <th></th>
                <th>Type</th>
                <th>Name</th>
                <th>Year</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>



    <div class="pull-right btn-group clearfix">
        <button type="button" class="btn btn-default" onclick="backToEmployee()">
            Close
        </button>
    </div>
    <div class="clearfix"></div>
</div>

<div class="modal fade" id="editSertificationDialog" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <span id="editSertificationDialogTitle" class="modal-title">New Item</span>
            </div>
            <div class="modal-body" id="editSertificationDlgArea">
            </div>
        </div>
    </div>
</div>


<script>

    var urlDeleteSertification = "@Url.Action("Delete", "TrainingSertifications")";
    var urlUpdateSertivfication = "@Url.Action("Update", "TrainingSertifications")";
    var urlGetSertifications = "@Url.Action("List", "TrainingSertifications", new { employeeId })"


    initSertificationEditorTree();


    function backToEmployee() {
        var url = '@Url.Action("GetEmployeeDetails", "Employees", new { id = employeeId })';
        window.location.href = url;
    }

</script>
